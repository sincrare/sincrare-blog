= form_for [:admin, @tag] do |f|
  - if @tag.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tag.errors.count, "error")} prohibited this tag from being saved:"
      %ul
        - @tag.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name, 'タグ名称:'
    = f.text_field :name

  .actions
    = f.submit '保存'
