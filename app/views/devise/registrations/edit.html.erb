<h2><%= resource_name.to_s.humanize %> アカウント情報編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, 'お名前:' %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email, 'メールアドレス:' %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>メールアドレスの認証待ち中: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, '新しいパスワード:' %> <i>(パスワードを変更しない場合は空欄にしてください)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %>文字以上</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, '新しいパスワードの再入力:' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password, '現在のパスワード:' %> <i></i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :comment, 'コメント（任意）:' %><br />
    <%= f.text_area :name, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<h3>アカウントの削除</h3>

<p><%= button_to 'アカウントを削除する', registration_path(resource_name), data: { confirm: '本当に削除してよろしいですか？' }, method: :delete %></p>

<%= link_to '戻る', :back %>
